<idea-plugin>
    <id>com.github.vsmysee.poemforidea</id>
    <name>Poem For Idea</name>
    <vendor>codecode.fun</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="ChinaPoem" anchor="right" factoryClass="com.github.vsmysee.poemforidea.PoemToolWindowFactory"/>
    </extensions>

    <actions>

        <action id="POEM_BACK" class="com.github.vsmysee.poemforidea.BackAction" icon="/icons/prev.png">
            <keyboard-shortcut first-keystroke="alt F7" keymap="$default"/>
        </action>
        <action id="POEM_FORWARD" class="com.github.vsmysee.poemforidea.ForwardAction" icon="/icons/next.png">
            <keyboard-shortcut first-keystroke="alt F7" keymap="$default"/>
        </action>
    </actions>

</idea-plugin>
